
@{
    ViewBag.Title = "CreateCollection";
}

<h2>CreateCollection</h2>

<div  ng-controller="CreateCollectionController">
    <h2>Create New Collection</h2>
    <form ng-submit="saveCollection()">
        <label>Title:</label>
        <input type="text" ng-model="collection.title" required><br><br>

        <label>Description:</label>
        <textarea ng-model="collection.description" required></textarea><br><br>

        <label>Image URL:</label>
        <input type="text" ng-model="collection.image"><br><br>

        <label>Link:</label>
        <input type="text" ng-model="collection.link"><br><br>

        <button type="submit">Create</button>
    </form>
</div>